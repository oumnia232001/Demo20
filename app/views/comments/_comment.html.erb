<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.name %>:</strong>
          <%= comment.comment %>
        </p>
      </div>
    </div>
    <div class="level-right">
     	<p class="level-item">
      <%= link_to "Edit", edit_post_comment_path(comment.post, comment), class:"button" %>
      </p>
      	<p class="level-item">
      <%= link_to 'Delete', [comment.post, comment],
                  method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %>
                  </p>
    </div>
  </article>
</div>
